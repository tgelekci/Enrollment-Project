<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stu.student.SendActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textStuNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="37dp"
            android:layout_marginStart="37dp"
            android:layout_marginTop="117dp"
            android:text="Student Number:" />

        <TextView
            android:id="@+id/textLesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textStuNo"
            android:layout_alignStart="@+id/textStuNo"
            android:layout_below="@+id/textStuNo"
            android:layout_marginTop="33dp"
            android:text="Lesson:" />

        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textLesson"
            android:layout_alignStart="@+id/textLesson"
            android:layout_below="@+id/textLesson"
            android:layout_marginTop="32dp"
            android:text="Date:" />

        <TextView
            android:id="@+id/txtStuNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textStuNo"
            android:layout_marginLeft="76dp"
            android:layout_marginStart="76dp"
            android:layout_toEndOf="@+id/textStuNo"
            android:layout_toRightOf="@+id/textStuNo" />

        <TextView
            android:id="@+id/txtLesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtStuNo"
            android:layout_alignRight="@+id/txtStuNo"
            android:layout_alignTop="@+id/textLesson" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtLesson"
            android:layout_alignRight="@+id/txtLesson"
            android:layout_alignTop="@+id/textDate" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
